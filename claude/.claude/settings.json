{
  "env": {
    "DISABLE_COST_WARNINGS": "1",
    "DISABLE_SESSION_LIMIT_WARNINGS": "1"
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/confirm-dangerous-noncloudlab.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/confirm-git.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/block-nfs-writes.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "filepath=\"$CLAUDE_FILE_PATH\"; case \"$filepath\" in *.sh) command -v shellcheck >/dev/null && shellcheck \"$filepath\" 2>&1 | head -20 ;; *.py) python3 -m py_compile \"$filepath\" 2>&1 ;; *.zshrc) zsh -n \"$filepath\" 2>&1 | head -5 ;; *.bashrc) bash -n \"$filepath\" 2>&1 | head -5 ;; esac"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "feature-dev@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "clangd-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true
  },
  "editMode": "vim"
}
